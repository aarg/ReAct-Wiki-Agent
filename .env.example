# Copy this file to .env and fill in your API keys

# API Keys Configuration

# Anthropic API for Claude AI (Required)
# Get your API key from: https://console.anthropic.com/account/keys
ANTHROPIC_API_KEY="your-anthropic-api-key-here"

# Google Search API (Optional - for web search tool)
# Get your API key from: https://console.cloud.google.com/apis/credentials
# Get your Search Engine ID from: https://programmablesearchengine.google.com/
GOOGLE_API_KEY="your-google-api-key-here"
GOOGLE_SEARCH_ENGINE_ID="your-search-engine-id-here"

# LangSmith Configuration for Observability (Optional)
# Sign up at https://smith.langchain.com to get your API key
# Set LANGCHAIN_TRACING_V2 to "false" to disable tracing
LANGCHAIN_TRACING_V2="true"
LANGCHAIN_ENDPOINT="https://api.smith.langchain.com"
LANGCHAIN_API_KEY="your-langsmith-api-key-here"
LANGCHAIN_PROJECT="wiki-agent"